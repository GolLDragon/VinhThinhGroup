<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:id="@+id/imagecongsuatcs"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:id="@+id/textviewtendodungcs"
            android:text="Tên đồ dùng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="3dp"
            android:textSize="15sp"
            android:textColor="@color/colorRed"
            android:id="@+id/textviewcongsuatcs"
            android:text="Công suất"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="3dp"
            android:textSize="15sp"
            android:textColor="@color/colorRed"
            android:id="@+id/textviewmaloaiphong"
            android:text="Phòng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:padding="10dp"
                android:focusable="false"
                android:id="@+id/buttontrucs"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:text=" - "
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
            <Button
                android:background="@color/colorWhite"
                android:focusable="false"
                android:id="@+id/buttongiatrics"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:text=" 1 "
                android:layout_width="70dp"
                android:layout_height="wrap_content" />
            <Button
                android:padding="10dp"
                android:focusable="false"
                android:id="@+id/buttoncongcs"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:text=" + "
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>